<EditForm Model="string.Empty" Enhance FormName="@FormName" OnSubmit="OnSubmit">
    <CommandSubmit Id="@($"submit-{FormName}")" Disabled="Disabled" Text="@Text" />
</EditForm>

@code {

    [Parameter]
    public string FormName { get; set; } = string.Empty;

    [Parameter]
    public string Text { get; set; } = string.Empty;

    [Parameter]
    public bool Submit { get; set; } = true;
    
    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public Action OnSubmit { get; set; } = () => { };

}