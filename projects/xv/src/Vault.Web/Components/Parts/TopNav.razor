<XBox
    Id="top-nav"
    TopLeft="Welcome!"
    TopRight="@DateTime.Now.ToShortTimeString()"
>
    @if (isLoggedIn)
    {
        <p>this would be a different form</p>
    }
    else
    {
        <div stack-="column">
            <p>Select a command:</p>
            <XButton Size="XSize.Small" Text="xv login --token" DataOnClick="@(FragmentPaths.Login.GetToken)"/>
            <XButton Size="XSize.Small" Text="xv login --seed" DataOnClick="@(FragmentPaths.Login.GetSeed)"/>
            <XButton Size="XSize.Small" Text="xv login --generate" DataOnClick="@(FragmentPaths.Login.GetGenerate)"/>
            <XButton Size="XSize.Small" Text="xv --help" DataOnClick="@(FragmentPaths.Help)"/>
            
        </div>
    }
</XBox>

