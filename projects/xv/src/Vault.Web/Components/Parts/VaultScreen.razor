
@if (string.IsNullOrEmpty(VaultId))
{
    <div id="vault-screen"></div>
}
else
{
    <XBox Id="vault-screen" TopLeft="@($"Vault - {VaultId}")">
        <table>
            <thead>
            <tr>
                <th>key</th>
                <th>value</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td><span>key-1</span></td>
                <td><span>value-1</span></td>
            </tr>
            <tr>
                <td><span>key-2</span></td>
                <td><span>value-2</span></td>
            </tr>
            </tbody>
        </table>
    </XBox>
}

@code {

    [Parameter]
    public string VaultId { get; set; } = string.Empty;

}